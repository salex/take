<h1>Listing answers</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Sequence</th>
    <th>Short name</th>
    <th>Answer text</th>
    <th>Value</th>
    <th>Requires other</th>
    <th>Other question</th>
    <th>Text eval</th>
    <th>Key</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.question_id %></td>
    <td><%= answer.sequence %></td>
    <td><%= answer.short_name %></td>
    <td><%= answer.answer_text %></td>
    <td><%= answer.value %></td>
    <td><%= answer.requires_other %></td>
    <td><%= answer.other_question %></td>
    <td><%= answer.text_eval %></td>
    <td><%= answer.key %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

